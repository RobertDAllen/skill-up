
= simple_form_for(@workout, html: { class: 'form-horizontal col-md-4' }) do |f|
    = f.input :date, label: "Date"
    = f.select :category, ['Cooking', 'Dancing', 'Programming', 'Writing'], label: "Which category?", input_html: { class: "form-control" }
    = f.input :workout, label: "What did you do?", input_html: { class: "form-control" }
    = f.input :duration, as: :integer, label: "For how many minutes?", input_html: { class: "form-control" }
    %br/
    = f.button :submit
    %br/
    %br/
    = link_to "Cancel", root_path