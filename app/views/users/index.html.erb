<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th class="userindexhead">Username</th>
      <th class="userindexhead">Email</th>
      <th class="userindexhead">Name</th>
      <th class="userindexhead">Total Entries</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="userindex"><%= link_to gravatar_for(user, size: 40), user_path(user) %></td>
        <td class="userindex"><%= link_to user.username, user_path(user) %>  </td>
        <td class="userindex"><%= user.email %></td>
        <td class="userindex"><%= user.name %>  </td>
        <td class="userindex"><%= pluralize(user.workouts.count, "workouts") if user.workouts %></td>
        <td class="userindex"><%= link_to ' Show ', user %></td>
        <td>|</td>
        <td class="userindex"><%= link_to ' Edit ', edit_user_path(user) %></td>
        <td>|</td>
        <td class="userindex"><%= link_to ' Delete ', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

