    <%= gravatar_for @user, size: 150 %>
  </div>
  <div class="col-md-9">
    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>
  
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  
